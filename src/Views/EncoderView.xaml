<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Milo.Encoding.Controls"
             x:Class="Milo.Encoding.Views.EncoderView">
    <VerticalStackLayout Spacing="25">
        <Label Text="Enter message to be encoded:"></Label>
        <controls:MessageEditor/>

        <Label Text="This is the message after encoding:"></Label>
        <controls:EncryptedMessageView/>
    </VerticalStackLayout>
</ContentView>
